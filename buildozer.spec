[app]

# Título do aplicativo
title = Thaipoint

# Pacote (identificador único)
package.name = thaipoint
package.domain = com.meuapp

# Versão do app
version = 0.1

# Diretório da fonte
source.dir = src/thaipoint
source.include_exts = py,html,js,css,png,jpg

# Requisitos
requirements = python3, flask

# Nome do arquivo de entrada
entrypoint = app.py

# Orientação da tela
orientation = portrait

# Tema Android
android.api = 33
android.minapi = 21
android.sdk = 33
android.ndk = 25b
android.arch = armeabi-v7a
